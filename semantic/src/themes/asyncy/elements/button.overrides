.ui.button.social {
  margin: 0 10px;
  padding: 12tpx 55px;
  font-size: 16px;
  font-weight: 600;
  border: 2px solid rgba(244,250,250,.2);
  box-shadow: 0 4px 12px 0 rgba(3,3,4,0);
}

.ui.button.social .icon {
  width: 24px;
  height: auto;
  margin-right: 11px;
}

.ui.button.social:hover {
  color: #fff;
  border-color: rgba(255,255,255,1);
  background: rgba(255,255,255,.5);
}

.button.huge {
  padding: 18px 90px;
  font-weight: 600;
}
